- if @prototype.errors.any?
  .alert.alert-danger
    %ul
      - @prototype.errors.full_messages.each do |message|
        %li
          = message
.container.proto-new
  = form_for @prototype do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :images, @main_image do |images_form|
              = images_form.file_field :image
              = images_form.hidden_field :status, value: "main"
        .col-md-12
          %ul.proto-sub-list.list-group
            - 3.times do |i|
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :images, @sub_images[i] do |images_form|
                    = images_form.file_field :image
                    = images_form.hidden_field :status, value: "sub"
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4"
        .col-md-12
          %h4 Tag List
          .row
            - Settings.placeholders_name.each_with_index do |name, i|
              .col-md-3
                = text_field_tag 'prototype[tag_list][]', "#{@prototype.tag_list[i]}", placeholder: name
      .row.text-center.proto-btn
        = f.submit "Publish", class: "btn btn-lg btn-primary btn-block"
