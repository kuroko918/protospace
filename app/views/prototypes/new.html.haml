- if flash[:alert]
  .alert.alert-danger
    = flash[:alert]
.container.proto-new
  = form_for @prototype do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :images do |images_form|
              = images_form.file_field :image
              = images_form.hidden_field :status, value: "main"
        .col-md-12
          %ul.proto-sub-list.list-group
            = f.fields_for :images do |images_form|
              %li.list-group-item.col-md-4
                .image-upload
                  = images_form.file_field :image
                  = images_form.hidden_field :status, value: "sub"
              %li.list-group-item.col-md-4
                .image-upload
                  = images_form.file_field :image
                  = images_form.hidden_field :status, value: "sub"
              %li.list-group-item.col-md-4
                .image-upload-plus
                  %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{type: "text", placeholder: "Web Design"}/
            .col-md-3
              %input{type: "text", placeholder: "UI"}/
            .col-md-3
              %input{type: "text", placeholder: "Application"}/
      .row.text-center.proto-btn
        %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Publish
