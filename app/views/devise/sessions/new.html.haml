.container.form-signin
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2.form-signin-heading Please sign in
    = f.email_field :email, class: 'form-control',id: 'inputEmail', autofocus: "", placeholder: 'Email address', required: "", type: "email"
    = f.password_field :password, class: 'form-control', id: 'inputPassword', placeholder: 'password', required: "", type: "password"
    .checkbox
      %label
        = f.check_box :remember_me
        Remember me
    = f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block'
  .text-center
    %p
      Not a member?
      = link_to 'Sign up now',new_user_registration_path
